@model IEnumerable<MyMovie.Models.TicketDto>

@{
    ViewData["Title"] = "List";
}

<div class="container-fluid bg-dark p-3 text-white">
    <h1 class="text-center">Booking List</h1>
</div>
<div class="container-fluid bg-light p-3 text-dark">
    <div class="container">
<div class="d-flex flex-row justify-content-between mb-3">
            <a asp-action="New" class="btn btn-warning shadow">Create New</a>
            <a href="/ViewerPage/List" class="btn btn-warning shadow">Go to Viewer Overview</a>
            <a href="/MoviePage/List" class="btn btn-warning shadow">Go to Movie Overview</a>
            </div>
        <table class="table table-striped table-hover mb-5 align-middle fs-6">
    <thead>
                <tr class="table-dark text-capitalize">
            <th>
                @Html.DisplayNameFor(model => model.ticket_id)
            </th>
                    <th>
 @Html.DisplayNameFor(model => model.movie_name)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ticket_no)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customer_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.identity)
            </th>
            <th>
                Operation
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ticket_id)
                </td>
                        <td>
                            <a asp-controller="MoviePage" asp-action="Details" asp-route-id="@item.movie_id">
                    @Html.DisplayFor(modelItem => item.movie_name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ticket_no)
                </td>
                <td>
                     <a asp-controller="ViewerPage" asp-action="Details" asp-route-id="@item.customer_id">
                    @Html.DisplayFor(modelItem => item.customer_name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.identity)
                </td>
                        <td style="width: 15rem;">
                            <a asp-action="Edit" asp-route-id="@item.ticket_id" class="btn btn-outline-dark w-75 mb-sm-1 py-md-1">Edit</a>
                            <a asp-action="ConfirmDelete" asp-route-id="@item.ticket_id" class="btn btn-outline-dark w-75 py-md-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
