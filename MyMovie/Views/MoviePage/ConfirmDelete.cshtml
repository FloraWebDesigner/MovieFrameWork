@model MyMovie.Models.MovieDto

@{
    ViewData["Title"] = "ConfirmDelete";
}
<div class="container-fluid bg-dark p-3 text-white">
    <h1 class="text-center">Delete a Movie</h1>
</div>
<div class="container-fluid bg-warning p-3 text-dark">
    <div class="container align-content-center">
            <div>
                <a asp-action="List" class="btn btn-outline-dark shadow">Back to List</a>
            </div>

        <div class="row justify-content-center">
            <h3 class="text-center">Are you sure you want to delete this movie?</h3>
            <div class="form col-md-6 mx-auto bg-dark text-white p-md-3 text-capitalize rounded-2 shadow mb-5 fs-5">
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.movie_name)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.movie_name)
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.year)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.year)
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.introduction)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.introduction)
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.rate)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.rate)
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.duration)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.duration)
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.director)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.director)
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.star)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.star)
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-4 text-start">
                        @Html.DisplayNameFor(model => model.ticket_quantity)
                    </div>
                    <div class="col-md-8 fw-bolder text-center">
                        @Html.DisplayFor(model => model.ticket_quantity)
                    </div>
                </div>
                <div class="form-group p-3">
                    <form asp-action="Delete" asp-route-id="@Model.movie_id">
                        <input type="hidden" asp-for="movie_id" />
                        <input type="submit" value="Delete" class="btn btn-warning w-100" />
                    </form>
                </div>
            </div>
        </div>
                </div>
</div>
</div>
